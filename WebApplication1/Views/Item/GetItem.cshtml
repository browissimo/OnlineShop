@*@model OnlineShop.Domain.Entity.Item*@
@model OnlineShop.Domain.Entity.Item
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div style="padding: 10px;"></div>
<div class="card mb-3">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="https://images.wallpaperscraft.ru/image/single/mercedes_benz_s_class_w222_112850_800x600.jpg" 
                 class="img-fluid rounded-start rounded" alt="@Model?.Name">
        </div>
        <div class="col-md-4">
            <div class="card-body">
                <h5 class="card-title text-center">@Model?.Name</h5>
                <p class="card-text"><b>Description: </b>@Model?.Description</p>
                <p class="card-text"><b>Price: </b>@Model?.Price $</p>
                <p class="card-text"><b>Type: </b>@Model?.Type</p>
                <p class="card-text"><b>Model: </b>@Model?.Collection</p>
                <p class="card-text"><small class="text-muted">Release date - @Model?.ReliseDate</small></p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card-body">
                <p class="card-text"><b>Descriprion: </b>@Model?.Description</p>
            </div>
        </div>
    </div>
</div>
